<Window x:Class="ViewEuroMatchManagerment.MatchesManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewEuroMatchManagerment"
        mc:Ignorable="d"
        Title="MatchesManager" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Height="48" Margin="183,137,0,0" VerticalAlignment="Top" Width="109" Click="AddButton_Click" Grid.Column="1"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Height="50" Margin="183,230,0,0" VerticalAlignment="Top" Width="109" Grid.Column="1" Click="UpdateButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Height="50" Margin="183,326,0,0" VerticalAlignment="Top" Width="109" Grid.Column="1" Click="DeleteButton_Click"/>
        <DataGrid AutoGenerateColumns="False" x:Name="ListMatchesDataGrid" HorizontalAlignment="Left" Height="339" Margin="10,85,0,0" VerticalAlignment="Top" Width="653" Grid.ColumnSpan="2" SelectionChanged="ListMatchesDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Home Team" Binding="{Binding TeamA.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Guest Team" Binding="{Binding TeamB.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Location" Binding="{Binding Location.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Attendance" Binding="{Binding Attendance}"></DataGridTextColumn>
                <DataGridTextColumn Header="Home Team Goals" Binding="{Binding GoalTeamA}"></DataGridTextColumn>
                <DataGridTextColumn Header="Guest Team Goals" Binding="{Binding GoalTeamB}"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Label Content="Matches Management" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="494" FontSize="48" Grid.ColumnSpan="2" Margin="153,0,0,0"/>


    </Grid>
</Window>
